{
  "name": "geospatial-dashboard",
  "version": "1.0.0",
  "description": "High-performance, real-time geospatial data dashboard",
  "workspaces": [
    "apps/client",
    "apps/server"
  ],
  "scripts": {
    "dev:server": "bun --cwd apps/server dev",
    "dev:client": "bun --cwd apps/client dev",
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client --host\"",
    "build:client": "bun --cwd apps/client build",
    "build": "bun run build:client",
    "start": "bun --cwd apps/server run src/index.ts",
    "db:setup": "psql -U postgres -d geospatial_dashboard -f apps/server/db/schema.sql",
    "db:seed": "psql -U postgres -d geospatial_dashboard -f apps/server/db/seeds/01_sample_data.sql",
    "db:init": "createdb geospatial_dashboard && npm run db:setup && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "latest"
  }
}